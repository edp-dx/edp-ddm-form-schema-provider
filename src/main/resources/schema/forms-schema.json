{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "form",
        "survey",
        "questionnaire"
      ]
    },
    "display": {
      "type": "string",
      "enum": [
        "form"
      ]
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "showCardOnUi": {
      "type": "boolean"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true,
  "required": [
    "name", "title", "display", "type", "showCardOnUi", "roles"
  ]
}